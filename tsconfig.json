{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "baseUrl": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "~/*": ["src/*"]
    },
    "lib": ["dom", "webworker", "es2019"],
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "public"]
}
